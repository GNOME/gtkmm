#include <gtk/gtk.h>

namespace Gtk
{

CheckButton::CheckButton(const Glib::ustring& label, bool mnemonic)
:
  _CONSTRUCT("label", label.c_str(), "use_underline", gboolean(mnemonic))
{}

void CheckButton::unset_group()
{
  gtk_check_button_set_group(gobj(), nullptr);
}

} // namespace Gtk
